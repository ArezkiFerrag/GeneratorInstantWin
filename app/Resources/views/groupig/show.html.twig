{% extends 'base.html.twig' %}

{% block body %}
    <h1>GroupIG</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ groupIG.id }}</td>
            </tr>
            <tr>
                <th>Operation</th>
                <td>{{ groupIG.operation }}</td>
            </tr>
            <tr>
                <th>Startat</th>
                <td>{% if groupIG.startAt %}{{ groupIG.startAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endat</th>
                <td>{% if groupIG.endAt %}{{ groupIG.endAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('groupig_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('groupig_edit', { 'id': groupIG.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
